		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.username">gtrx_admin</property>
		<property name="hibernate.connection.password">k8yc10@#</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/gtrx</property>
		<property name="hibernate.default_schema">gtrx_schema</property>
		<property name="hibernate.connection_pool_size">5</property>
		<property name="hibernate.hbm2ddl.auto">validate</property>
		<property name="hibernate.show_sql">true</property>
	
		<!-- Class Mappings for Requestable_Items -->
